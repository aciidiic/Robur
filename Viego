		Menu.ColoredText("Wave", 0xFFD700FF, true)
		Menu.Checkbox("Waveclear.CastQ","Cast Q for Killable CS",true)
		Menu.Slider("Waveclear.CastQHC", "Q Min. Killable Count",  1, 0, 10, 1)
